<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.management.student.tree</field>
        <field name="model">student.management.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="roll_no"/>
                <field name="email"/>
                <field name="department"/>
            </tree>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.management.student.form</field>
        <field name="model">student.management.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="roll_no"/>
                        <field name="department"/>
                    </group>
                    <group>
                        <field name="course_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button type="object" name="action_show_enrolled_courses"
                                string="Show Enrolled Courses" class="btn-primary"/>
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student_tree" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management.student</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first student
            </p>
        </field>
    </record>
</odoo>
