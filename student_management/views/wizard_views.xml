<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_wizard_form" model="ir.ui.view">
        <field name="name">student.management.report.wizard.form</field>
        <field name="model">student.management.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Students by Course">
                <sheet>
                    <group>
                        <field name="course_id"/>
                    </group>
                    <footer>
                        <button type="object" name="action_open_students" string="Show Students" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_report_wizard" model="ir.actions.act_window">
        <field name="name">Students by Course</field>
        <field name="res_model">student.management.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
