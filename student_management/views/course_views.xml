<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">student.management.course.tree</field>
        <field name="model">student.management.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="credit"/>
            </tree>
        </field>
    </record>

    <record id="view_course_form" model="ir.ui.view">
        <field name="name">student.management.course.form</field>
        <field name="model">student.management.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="credit"/>
                    </group>
                    <group>
                        <field name="student_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_course_tree" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">student.management.course</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
